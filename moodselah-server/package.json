{
  "name": "moodselah-server",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mailgun-js": "^0.16.0",
    "@types/node": "^10.5.0",
    "@types/twilio": "^0.0.9"
  },
  "scripts": {
    "prestart:dev": "yarn run types",
    "start:dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/api",
    "start": "cd dist && node .",
    "postinstall": "cd .. && npm install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && lint-staged && yarn test",
      "pre-push": "yarn build && lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -c tslint.json --project tsconfig.json"
    ]
  },
  "dependencies": {
    "@types/json5": "^0.0.30",
    "babel-runtime": "^6.26.0",
    "bcrypt": "3.0.4",
    "class-validator": "^0.8.5",
    "copy": "^0.3.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "0.1.2",
    "graphql-tools": "4.0.4",
    "graphql-yoga": "1.17.4",
    "helmet": "^3.12.1",
    "husky": "^1.3.1",
    "json5": "^2.0.1",
    "jsonwebtoken": "^8.3.0",
    "lint-staged": "^8.1.5",
    "lodash": "^4.17.10",
    "mailgun-js": "^0.19.0",
    "merge-graphql-schemas": "^1.5.2",
    "mkdirp": "^0.5.1",
    "morgan": "^1.9.0",
    "mysql": "^2.16.0",
    "nanoid": "^1.2.3",
    "nodemon": "^1.17.5",
    "ts-node": "8.0.2",
    "tslint-config-prettier": "^1.13.0",
    "twilio": "^3.17.4",
    "typeorm": "^0.2.14",
    "typescript": "^2.9.2"
  },
  "now": {
    "name": "moodselah-server",
    "dotenv": ".env.production"
  }
}
